# Scanner Cifrado S3 Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Set to "false" for production with real scanner hardware
SCANNER_MOCK_MODE=true

# Application environment
APP_ENVIRONMENT=development

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=60

# Logging level
LOG_LEVEL=INFO

# =============================================================================
# SCANNER CONFIGURATION
# =============================================================================
# Scanner type (TWAIN, SANE, WIA)
SCANNER_TYPE=TWAIN

# Scanner device name
SCANNER_NAME=Canon imageFORMULA DR-C225

# Scanner model
SCANNER_MODEL=DR-C225

# Connection timeout in seconds
SCANNER_TIMEOUT_SECONDS=30

# Retry settings
SCANNER_RETRY_ATTEMPTS=3
SCANNER_RETRY_DELAY_SECONDS=2

# Document polling interval (seconds)
DOCUMENT_POLLING_INTERVAL=2

# Maximum documents per batch
MAX_DOCUMENTS_PER_BATCH=50

# Default scan settings
SCANNER_DEFAULT_FORMAT=PDF
SCANNER_RESOLUTION=300
SCANNER_COLOR_MODE=Color

# File settings
SCAN_OUTPUT_DIR=temp/scans
MAX_FILE_SIZE_MB=50

# Real scanner settings (used when MOCK_MODE=false)
SCANNER_DEVICE_ID=
SCANNER_DRIVER_PATH=
SCANNER_CONNECTION=USB
SCANNER_IP=
SCANNER_PORT=9100
SCANNER_USERNAME=
SCANNER_PASSWORD=

# =============================================================================
# S3 CONFIGURATION
# =============================================================================
# S3 bucket name (REQUIRED)
S3_BUCKET_NAME=scanner-cifrado-docs

# S3 region
S3_BUCKET_REGION=us-east-1

# AWS credentials (prefer IAM roles in production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_PROFILE=default

# S3 key prefix
S3_KEY_PREFIX=encrypted-documents

# Upload settings
S3_MULTIPART_THRESHOLD=100
S3_MAX_UPLOAD_ATTEMPTS=3
S3_UPLOAD_TIMEOUT=300

# Encryption settings
S3_SERVER_SIDE_ENCRYPTION=AES256
S3_KMS_KEY_ID=

# Lifecycle settings
S3_TRANSITION_IA_DAYS=30
S3_TRANSITION_GLACIER_DAYS=90
S3_RETENTION_YEARS=7

# =============================================================================
# CRYPTOGRAPHY SETTINGS
# =============================================================================
# Key rotation in days
CRYPTO_KEY_ROTATION_DAYS=90

# Use ephemeral keys (recommended)
CRYPTO_EPHEMERAL_KEYS=true

# PBKDF2 iterations
CRYPTO_PBKDF2_ITERATIONS=100000

# Enable compression
CRYPTO_COMPRESSION=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database type (sqlite, postgresql, mysql)
DB_TYPE=sqlite

# SQLite database path
SQLITE_DB_PATH=data/scanner_app.db

# PostgreSQL settings (if using PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=scanner_app
POSTGRES_USER=
POSTGRES_PASSWORD=

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_TIMEOUT=30

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Window dimensions
UI_WINDOW_WIDTH=900
UI_WINDOW_HEIGHT=600
UI_MIN_WIDTH=800
UI_MIN_HEIGHT=500

# Theme settings
UI_THEME=default
UI_FONT_FAMILY=
UI_FONT_SIZE=10

# Update intervals (milliseconds)
UI_STATUS_UPDATE_MS=2000
UI_LOG_REFRESH_MS=1000

# Document list settings
UI_MAX_DOC_LIST=100
UI_AUTO_SCROLL_LOGS=true